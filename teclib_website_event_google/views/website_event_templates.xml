<odoo>
  <template id="event_description_full_inherited"
            inherit_id="website_event.event_description_full" name="Event Description Inherited">
    <div t-if="event.organizer_id" position="attributes">
      <attribute name="itemprop">organizer</attribute>
    </div>
    <h4 t-field="event.organizer_id" position="attributes">
      <attribute name="itemprop">name</attribute>
    </h4>

    <div t-field="event.organizer_id" position="replace">
      <div itemscope="itemscope" itemprop="organizer">
        <div t-if="event.organizer_id.phone">
          <i class="fa fa-phone fa-fw mr-2"/>
          <span itemprop="telephone" t-esc="event.organizer_id.phone"/>
        </div>
        <div t-if="event.organizer_id.mobile">
          <i class="fa fa-mobile fa-fw mr-2"/>
          <span t-esc="event.organizer_id.mobile"/>
        </div>
        <div t-if="event.organizer_id.email">
          <i class="fa fa-envelope fa-fw mr-2"/>
          <span itemprop="email" t-esc="event.organizer_id.email"/>
        </div>
        <div style="display:none;">
          <span itemprop="url" t-esc="event.organizer_id.website"/>
        </div>
      </div>

    </div>
    <xpath expr="//h5[@t-field='event.with_context(tz=event.date_tz).date_end']/parent::div/h5[last()]"
           position="attributes">
      <attribute name="itemprop">endDate</attribute>
    </xpath>
  </template>
</odoo>
